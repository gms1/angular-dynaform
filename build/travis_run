#!/bin/bash

DN=$(dirname "$0")
BN=$(basename "$0")

PROJ_HOME=$(cd "${DN}/.."; pwd)
. "${DN}/sh/lib.sh"

#---------------------------------------------------------

pushd "${PROJ_HOME}" &>/dev/null  || die "failed to cwd '${PROJ_HOME}'"

  echo "*** build..."
  make                    || die "failed to build packages"
  echo "*** build: done"
  echo "*** build..."
  make test               || die "failed to test packages"
  echo "*** build: done"


popd &>/dev/null

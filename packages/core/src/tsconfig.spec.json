{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "adf-core",
    "outDir": "../tmp/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ]
  },
  "files": [
    "adf-core/test.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "spec/**/*.ts"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "skipMetadataEmit": false,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  }
}
